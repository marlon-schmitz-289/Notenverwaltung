<Page x:Class="Notenverwaltung.ShowGrades"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Notenverwaltung"
      mc:Ignorable="d"
      d:DesignHeight="350" d:DesignWidth="560"
      Title="ShowGrades" Loaded="Page_Loaded">
  <Border CornerRadius="5" Background="#192B66DC">
    <Grid>
      <Border>
        <ComboBox x:Name="cbxSubjects" Style="{DynamicResource CCBS}" Template="{DynamicResource ComboBoxTemplate}" Background="#AD000000" HorizontalAlignment="Left" Width="140" Height="30" VerticalAlignment="Top" BorderBrush="Black" Foreground="Black" SelectionChanged="cbxSubjects_SelectionChanged" />
      </Border>

      <Border CornerRadius="5" Background="#AD000000" Margin="0,40,0,0">
        <ListBox x:Name="lbxGrades" Style="{DynamicResource LBS}" Background="White" Foreground="Black" BorderBrush="Black"/>
      </Border>
    </Grid>
  </Border>
</Page>
