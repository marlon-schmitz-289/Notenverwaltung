<Page x:Class="Notenverwaltung.ShowGrades"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Notenverwaltung"
      mc:Ignorable="d"
      d:DesignHeight="350" d:DesignWidth="560"
      Title="ShowGrades">
  <Border CornerRadius="5" Background="#192B66DC">
    <Grid>
      <Border>
        <ComboBox Style="{DynamicResource CCBS}" Background="#AD000000" HorizontalAlignment="Left" Width="140" Height="30" VerticalAlignment="Top" />
      </Border>

      <Border CornerRadius="5" Background="#AD000000" Height="310" VerticalAlignment="Bottom"/>
    </Grid>
  </Border>
</Page>
