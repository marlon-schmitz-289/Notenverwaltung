<UserControl x:Class="_16_CustomControls.OnOffSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_16_CustomControls"
             mc:Ignorable="d" Height="33" Width="65" Loaded="LadenSwitch">
  <Grid>
    <Border x:Name="bdrBeda" BorderBrush="Black" BorderThickness="2" CornerRadius="20" Background="#FF089FE6"/>
    <Canvas x:Name="yeet" HorizontalAlignment="Right" Width="65">
      <Ellipse x:Name="elliInside" Stroke="Black" StrokeThickness="2" Width="35" Height="35" Canvas.Top="-1" Canvas.Left="-1">
        <Ellipse.Fill>
          <RadialGradientBrush>
            <GradientStop Color="White" Offset="0"/>
            <GradientStop Color="#FFCDCDCD" Offset="1"/>
          </RadialGradientBrush>
        </Ellipse.Fill>
      </Ellipse>
    </Canvas>
    <Label x:Name="lblOn" Content="On" Width="28" Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="2,4,0,0" Visibility="Hidden"/>
    <Label x:Name="lblOff" Content="Off" Visibility="Visible" Margin="0,4,0,4" HorizontalAlignment="Right" Width="29"/>
  </Grid>
</UserControl>
