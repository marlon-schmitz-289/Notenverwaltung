<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Notenverwaltung.UI.Windows.MainWindow"
        Title="Notenverwaltung"
        Icon="avares://Notenverwaltung/Resources/icon.ico"
        Width="800"
        Height="450"
        MinWidth="600"
        MinHeight="340"
        WindowStartupLocation="CenterScreen">

    <Viewbox Stretch="Uniform">
        <Grid x:Name="MainGrid" Width="800" Height="450">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Menu Panel -->
            <Border Grid.Column="0" Background="{DynamicResource SystemControlBackgroundChromeMediumBrush}"
                    Padding="10">
                <Grid RowDefinitions="Auto,*,Auto,Auto">
                    <!-- Title with Icon -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20"
                                HorizontalAlignment="Center">
                        <Image Source="avares://Notenverwaltung/Resources/icon.png"
                               Width="24" Height="24" x:Name="AppIcon" />
                        <TextBlock x:Name="TxtTitle" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" />
                    </StackPanel>

                    <!-- Menu Buttons -->
                    <StackPanel Grid.Row="1" Spacing="8">
                        <Button x:Name="BtnAddGrade" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="BtnAddGrade_Click">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z" Width="16" Height="16" />
                                <TextBlock x:Name="TxtAddGrade" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnEditGrade" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="BtnEditGrade_Click">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.12,5.12L18.87,8.87M3,17.25V21H6.75L17.81,9.93L14.06,6.18L3,17.25Z" Width="16" Height="16" />
                                <TextBlock x:Name="TxtEditGrade" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnListAvgs" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="BtnListAvgs_Click">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M19,3H5C3.9,3 3,3.9 3,5V19C3,20.1 3.9,21 5,21H19C20.1,21 21,20.1 21,19V5C21,3.9 20.1,3 19,3M9,17H7V10H9V17M13,17H11V7H13V17M17,17H15V13H17V17Z" Width="16" Height="16" />
                                <TextBlock x:Name="TxtListAvgs" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnListAll" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="BtnListAll_Click">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M3,13H15V11H3M3,6V8H21V6M3,18H9V16H3V18Z" Width="16" Height="16" />
                                <TextBlock x:Name="TxtListAll" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                        <Button x:Name="BtnEditSubs" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" Click="BtnEditSubs_Click">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <PathIcon Data="M12,3L1,9L12,15L21,10.09V17H23V9M5,13.18V17.18L12,21L19,17.18V13.18L12,17L5,13.18Z" Width="16" Height="16" />
                                <TextBlock x:Name="TxtEditSubs" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Settings Button -->
                    <Button x:Name="BtnSettings" Grid.Row="2" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                            Click="BtnSettings_Click" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <PathIcon Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" Width="16" Height="16" />
                            <TextBlock x:Name="TxtSettingsLabel" VerticalAlignment="Center" />
                        </StackPanel>
                    </Button>

                    <!-- Toggle Sidebar Button -->
                    <Button x:Name="BtnToggleSidebar" Grid.Row="3" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"
                            Click="BtnToggleSidebar_Click" Margin="0,10,0,0">
                        <PathIcon x:Name="ToggleIcon" Data="M15.41,16.58L10.83,12L15.41,7.41L14,6L8,12L14,18L15.41,16.58Z" Width="16" Height="16" />
                    </Button>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1">
                <Border Padding="10">
                    <ContentControl x:Name="MainContent" />
                </Border>

                <!-- Notification Banner -->
                <Border x:Name="NotificationBanner"
                        IsVisible="False"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Stretch"
                        Padding="15,10"
                        Margin="10"
                        CornerRadius="6">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <TextBlock x:Name="NotificationIcon" Grid.Column="0"
                                   FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" />
                        <TextBlock x:Name="NotificationText" Grid.Column="1"
                                   VerticalAlignment="Center" TextWrapping="Wrap" />
                        <Button x:Name="NotificationClose" Grid.Column="2"
                                Content="âœ•" Background="Transparent"
                                Padding="5,0" Margin="10,0,0,0"
                                Click="NotificationClose_Click" />
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Viewbox>

</Window>