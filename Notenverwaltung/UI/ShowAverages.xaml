<Page x:Class="Notenverwaltung.ShowAverages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Notenverwaltung"
      mc:Ignorable="d" Background="Transparent"
      d:DesignHeight="350" d:DesignWidth="560"
      Title="ShowAverages" Loaded="Page_Loaded">
  <Border CornerRadius="5" Background="#192B66DC">
    <Grid Margin="10,10,10,10">
      <ListBox x:Name="lbxAvgs" Style="{DynamicResource LBS}" Background="White" BorderBrush="Black" Foreground="Black" FontFamily="72 Monospace" />
    </Grid>
  </Border>
</Page>
